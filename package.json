{
  "name": "spanish-conjugator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:all": "vite",
    "server:start": "node server/src/index.js",
    "dev:learning": "vite --open /?mode=learning",
    "build": "vite build",
    "chunks:build": "node scripts/buildChunks.mjs",
    "lint": "eslint .",
    "preview": "vite preview",
    "preview:learning": "vite preview --open /?mode=learning",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --ui --coverage",
    "test:unit": "vitest run src/**/*.{test,spec}.{js,jsx}",
    "test:integration": "vitest run src/**/*.integration.{test,spec}.{js,jsx}",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:visual": "playwright test --grep=\"@visual\"",
    "test:smoke": "vitest run src/**/*.smoke.{test,spec}.{js,jsx}",
    "test:performance": "vitest run src/**/*.performance.{test,spec}.{js,jsx}",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "quality:check": "npm run lint && npm run test:run",
    "quality:fix": "npm run lint -- --fix"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@vercel/analytics": "^1.5.0",
    "diff": "^8.0.2",
    "idb": "^8.0.3",
    "idb-keyval": "^6.2.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "uuid": "^11.1.0",
    "zod": "^4.0.14",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.42.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "fake-indexeddb": "^6.1.0",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "lighthouse": "^12.8.2",
    "prettier": "^3.6.2",
    "vite": "^7.0.4",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-pwa": "^1.0.2",
    "vitest": "^3.2.4"
  }
}
